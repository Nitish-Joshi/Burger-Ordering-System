<% layout('layout') -%>
</div>
<div class="jumbotron" id="navbar-gap">
    <div class="container">
        <h1 class="text-center"> Find your favourite Products</h1>
        <p class="text-center">Search many of Shopchop products</p>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="input-group col-md-12">
                    <input id="search" type="text" id="search" class="form-control input-lg" name="search_term"
                           placeholder="Search for a Product...">
                    <span class="input-group-btn">
          <button type="submit" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-search"
                                                                     aria-hidden="true"></span></button>
          </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <h1 class="centered-title firstletter" id="searchText">All of our products</h1>
    </div>

    <div class="row" id="searchResults">
        <% for(var i = 0; i < products.length; i++) { %>
        <div class="col-md-4">
            <a href="/product/<%= products[i]._id %>">
                <div class="thumbnail">
                    <img src="<%= products[i].image %>">
                    <div class="caption">
                        <h3> <%= products[i].name %> </h3>
                        <p class="firstletter"> <%= products[i].category.name %> </p>
                        <p> $<%= products[i].price %> </p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
        <div class="container">
            <div class="col-md-6 col-md-offset-3">
                <ul class="pagination text-center">
                    <li>
                        <% for(var i = 1; i < page; i++) {
                        if(i === 1) { %>
                    <li><a href="/"> <%= i %></a>
                        <% } else { %>
                    <li><a href="/page/<%= i %>"> <%= i %></a></li>
                    <% } %>
                    <% } %>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>
